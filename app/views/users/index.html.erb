<ul>
  <% @users.each do |user| %>
    <li>
      <%= user.login_name %>
      <%= user.departments.name %>
      <% user.departments.each do |g| %>
        <%= g.name %>
      <% end %>
      <% if !user.comments.present? %>
        <%= link_to "good", hascomment_user_path(user), :method => :post %>
      <% else %>
        <%= link_to "notgood", hasnotcomment_user_path(user), :method => :post %>
      <% end %>
      <%= link_to "Show", user_path(user) %>
      <%= link_to 'Edit', edit_user_path(user) %>
      <%= button_to 'Delete', user_path(user), :method => :delete, :data => { :confirm => "Are you sure?" } %>
    </li>
  <% end %>
</ul>
  
  <%= link_to 'New User', new_user_path %>